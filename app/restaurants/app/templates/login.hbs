{{application-navbar classNames="navbar-black"}}

<div class="container-login">
{{!-- {{notification model=notification}} --}}
  <form class="form-login">
    <h3 class="form-signin-heading">Login</h3>
    {{#link-to 'create-account' class="pull-right" }}Create account{{/link-to}}
      {{input value=email type="email" class="form-control" placeholder="Email" required="" autofocus=""}}
      {{input value=password type="password" class="form-control" placeholder="Password" required=""}}
      <div class="notification-message">
        {{#if notification}}
        <div class="alert-danger" role="alert">
          <div class="alert alert-message">
          <h4><strong>Error!  </strong>{{notification.message}}</h4>
        </div>
        </div>
        {{/if}}
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit" {{action 'login'}}>Sign in</button>
  </form>

</div>
{{footer-component}}
