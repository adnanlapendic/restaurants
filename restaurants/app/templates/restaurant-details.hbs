
<div class-="restaurant-details-container">
  <div class="restaurant-cover-image">
    <div class="restaurant-details">
        <h2>{{model.name}}</h2>
        <h4>{{model.cousine}}</h4>
    </div>
    <img src={{model.image}} class="img-thumbnail" alt="Cinque Terre" width="304" height="236">
  </div>
</div>

<div class="restaurant-information">
  <div class="left-restaurant-details">
      <h3>Reservation</h3>
      <h3>About</h3>
      <h3>Menu</h3>
      <h3>Photos</h3>
  </div>

  <div class="right-restaurant-details">
    <div class="google-map">
      <h3>About {{model.name}}</h3>
      {{google-map latitude="{{model.latitude}}" longitude="{{model.longitude}}"}}
    </div>
      <div class="description">
        <p>{{model.description}}</p>
      </div>
    </div>

  </div>

{{outlet}}
